# Application settings
ENVIRONMENT=production
VERSION=1.0
RUST_LOG=better_call_put=error,warn,info,debug,hyper=error,warn,info

# Resource limits
CPU_LIMIT=2
MEMORY_LIMIT=2G
CPU_RESERVATION=1
MEMORY_RESERVATION=1G

# Healthcheck settings
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3

# Logging settings
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3